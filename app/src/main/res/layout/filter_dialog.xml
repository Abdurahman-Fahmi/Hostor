<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RoomType"
            android:textSize="25sp"
            android:textColor="@color/lavender"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/RG_RoomType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RB_Single"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Single"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/lavender_border_text"
                android:backgroundTint="#D1DCDE"
                android:layout_margin="5dp"
                android:padding="5dp"/>
                />


            <RadioButton
                android:id="@+id/RB_Double"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Double"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/lavender_border_text"
                android:backgroundTint="#D1DCDE"
                android:layout_margin="5dp"
                android:padding="5dp"/>


            <RadioButton
                android:id="@+id/RB_Dormitory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Dormitory"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/lavender_border_text"
                android:backgroundTint="#D1DCDE"
                android:layout_margin="5dp"
                android:padding="5dp"/>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internet"
            android:textSize="25sp"
            android:textColor="@color/lavender"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/RG_Internet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RB_WiFi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Wi-Fi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/lavender_border_text"
                android:backgroundTint="#D1DCDE"
                android:layout_margin="5dp"
                android:padding="8dp"/>
            />


            <RadioButton
                android:id="@+id/RB_NoWiFi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="No- Wi-Fi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/lavender_border_text"
                android:backgroundTint="#D1DCDE"
                android:layout_margin="5dp"
                android:padding="8dp"/>


        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Park"
            android:textSize="25sp"
            android:textColor="@color/lavender"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/RG_Park"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RB_withParking"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Parking"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/lavender_border_text"
                android:backgroundTint="#D1DCDE"
                android:layout_margin="5dp"
                android:padding="8dp"/>
            />


            <RadioButton
                android:id="@+id/RB_NoPark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="No- Parking"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/lavender_border_text"
                android:backgroundTint="#D1DCDE"
                android:layout_margin="5dp"
                android:padding="8dp"/>


        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textSize="25sp"
            android:textColor="@color/lavender"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/RG_Food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RB_Served"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Served"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/lavender_border_text"
                android:backgroundTint="#D1DCDE"
                android:layout_margin="5dp"
                android:padding="8dp"/>
            />


            <RadioButton
                android:id="@+id/RB_NoServing"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="No- Serving"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/lavender_border_text"
                android:backgroundTint="#D1DCDE"
                android:layout_margin="5dp"
                android:padding="8dp"/>


        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Residential"
            android:textSize="25sp"
            android:textColor="@color/lavender"
            android:layout_gravity="center"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/RG_Residential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RB_Citizen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Citizen"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/lavender_border_text"
                android:backgroundTint="#D1DCDE"
                android:layout_margin="5dp"
                android:padding="8dp"/>
            />


            <RadioButton
                android:id="@+id/RB_Foreign"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Foreign"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/lavender_border_text"
                android:backgroundTint="#D1DCDE"
                android:layout_margin="5dp"
                android:padding="8dp"/>


            <RadioButton
                android:id="@+id/RB_Any"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Any"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/lavender_border_text"
                android:backgroundTint="#D1DCDE"
                android:layout_margin="5dp"
                android:padding="8dp"/>

        </RadioGroup>

        <Button

            android:layout_gravity="center"
            android:id="@+id/btnApplyFilter"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginTop="15sp"
            android:backgroundTint="@color/lavender"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/baseline_research_for_24" />



    </LinearLayout>
</androidx.cardview.widget.CardView>
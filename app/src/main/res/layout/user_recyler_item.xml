<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/uploadimg"
                android:id="@+id/recImage"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/recLocation"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Location"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/lavender"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recRoomType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/lavender"
            android:textSize="0sp" />
        <TextView
            android:id="@+id/recInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/lavender"
            android:textSize="0sp" />
        <TextView
            android:id="@+id/recPark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/lavender"
            android:textSize="0sp" />
        <TextView
            android:id="@+id/recFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/lavender"
            android:textSize="0sp" />
        <TextView
            android:id="@+id/recResidential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/lavender"
            android:textSize="0sp" />


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:text="PKR "
                android:textColor="@color/lavender_light"
                android:textSize="15sp"
                android:layout_marginTop="3dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:textColor="@color/lavender"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/calibri"
                android:text=" Month"
                android:textColor="#FC0505"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>